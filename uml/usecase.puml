@startuml
left to right direction

actor User
actor Admin

rectangle "Electronic Shopping System" {

  ' ===== USER USE CASES =====
  usecase "Register / Login" as UC1
  usecase "Browse Products" as UC2
  usecase "Search Products" as UC3
  usecase "View Product Details" as UC4
  usecase "Add to Cart" as UC5
  usecase "Manage Cart" as UC6
  usecase "Checkout" as UC7
  usecase "Make Payment" as UC8
  usecase "View Order History" as UC9
  usecase "View Order Status" as UC10
  usecase "Manage Profile" as UC11

  ' ===== ADMIN USE CASES =====
  usecase "Admin Login" as UC12
  usecase "Manage Categories" as UC13
  usecase "Manage Products" as UC14
  usecase "Manage Inventory" as UC15
  usecase "View All Orders" as UC16
  usecase "Update Order Status" as UC17
  usecase "Manage Users" as UC18

  ' ===== USER RELATIONS =====
  User --> UC1
  User --> UC2
  User --> UC3
  User --> UC4
  User --> UC5
  User --> UC6
  User --> UC7
  User --> UC9
  User --> UC10
  User --> UC11

  ' ===== ADMIN RELATIONS =====
  Admin --> UC12
  Admin --> UC13
  Admin --> UC14
  Admin --> UC15
  Admin --> UC16
  Admin --> UC17
  Admin --> UC18

  ' ===== INCLUDE / EXTEND RELATIONSHIPS =====
  UC7 --> UC8 : <<include>>
  UC5 --> UC6 : <<include>>
}

@enduml
